<!DOCTYPE html>
<html>
<head>
  <title>Iamspotify</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h2 class="main-heading" align="center"> IamSpotify </h2>
  <div align="right">
  <% unless @spotify_user %>
    <%= link_to 'Sign in with Spotify', '/auth/spotify' , class: "btn btn-info btn-lg"%>
  <% else %>
    <%= @spotify_user.email %>
    <%= link_to 'Sign out', '/' , class: "btn btn-info btn-lg"%>
  <% end %>

  </div>
  <br>
  <br>
<%= yield %>

</body>
</html>
