%table.table.table-hover.table-condensed.table-striped#categories-table
  %tr
    %td#header
      Playlists
    %td#header
      = link_to 'Create Playlist', '/create_playlist' , class: "btn btn-info btn-sm"
  - @playlists.each do |playlist|
    %tr
      %td
        = playlist.name
      %td
        = link_to 'tracks', user_tracks_path(id: playlist.id) , class: "btn btn-success btn-sm"

%script
  $(document).ready(function() {
  $('.playlists-link').addClass('active')
  });

