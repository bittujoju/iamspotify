%table.table.table-hover.table-condensed.table-striped#categories-table
  %tr
    %td#header
      Playlists
    %td#header
      = link_to 'Create Playlist', '/create_playlist' , class: "btn btn-info btn-sm"
  - @spotify_user.playlists.each do |playlist|
    %tr
      %td
        = playlist.name
      %td
        = link_to 'tracks', '#' , class: "btn btn-success btn-sm", user_id: @spotify_user.id, id: playlist.id
